<Window x:Class="TicketSystem.Desktop.Views.CreateTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TicketSystem.Desktop.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Create Ticket" Height="400" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Top">
            <TextBlock Text="Subject" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Subject}" Margin="0,0,0,10"/>
            
            <TextBlock Text="Description" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Description}" Height="100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>
            
            <TextBlock Text="Priority" Margin="0,0,0,5"/>
            <ComboBox SelectedValue="{Binding Priority}" SelectedValuePath="Content" Margin="0,0,0,20">
                <ComboBoxItem Content="Low"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="High"/>
            </ComboBox>
            
            <Button Content="Submit" Command="{Binding SubmitCommand}" Height="30" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>
